<div>
    <h1 class="text-center">McKing!</h1>
</div>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h3 class="text-center"><u>burger list</u></h3>
            <br>
            <ul class="list-group">
                {{#each burgers}}
                {{#unless devoured}}
                <li class="list-group-item text-white bg-dark">
                    {{burger_name}}

                    <button class="eatIt btn btn-info float-right" data-id="{{id}}" data-eaten="{{devoured}}">
                        {{#if devoured}}{{else}}eat it{{/if}}
                    </button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h3 class="text-center"><u>Burgers Eaten</u></h3>
            <br>
            <ul class="list-group">
                {{#each burgers}}
                {{#if devoured}}
                <li class="list-group-item text-white bg-dark">
                    {{burger_name}}


                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>




<div class="container">
    <div class="row text-center">
        <div class="col text-center">
            <h2>Add a Burger</h2>
            <form id="create-form">

                <div class="form-group">
                    <label>Burger Name:</label>
                    <input type="text" id="newBurger" name="name">
                </div>

                <button type="submit">place order</button>
            </form>
        </div>
    </div>
</div>